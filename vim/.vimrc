"Do not fear change
set nocompatible

syntax on
filetype on
set ruler
set showcmd
set number
set wildmenu
set novisualbell
set noerrorbells

" Hybridmode for line numbers
set relativenumber
set number

" Netrw settings
let g:netrw_banner=0

"Fuzzy find type search
set path+=**

set backspace=2

set showmatch

set autoread

set ignorecase

set smartcase

set hlsearch

set incsearch

set t_vb=
set tm=500

set encoding=utf8
set ffs=unix,dos,mac

set expandtab

set smarttab

set smartindent
set shiftwidth=2
set tabstop=2

set lbr
set tw=500

set ai
set si
set wrap

" Allow quit via single keypress (Q)
map Q :q!<CR>
